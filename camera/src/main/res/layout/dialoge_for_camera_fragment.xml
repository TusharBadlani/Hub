<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="DialogeCameraViewModel"
            type="cessini.technology.camera.domain.viewmodel.CameraViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cpBottomSheetBackground"
        app:cardCornerRadius="@dimen/dimen_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/dimen_0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center"
                android:padding="@dimen/dimen_5"
                android:text="@string/cancel_upload_recorded_video"
                android:textAllCaps="false"
                android:textColor="@color/cpTextDark"
                android:textSize="@dimen/font_size_22"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dimen_50"
                android:letterSpacing="0.02"
                android:text="@string/dialog_message_video_upload_fragment"
                android:textAlignment="center"
                android:textColor="@color/cpHelpText"
                android:textFontWeight="700"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/cancel_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_5"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:paddingVertical="@dimen/dimen_10"
                android:text="Discard"
                android:textAllCaps="false"
                android:textColor="@color/cpRed"
                android:textSize="@dimen/font_size_18" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/cpBackgroundbutton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/do_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_5"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:paddingVertical="@dimen/dimen_10"
                android:text="Keep On"
                android:textFontWeight="700"
                android:textAllCaps="false"
                android:textColor="@color/cpPrimeBlue"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
