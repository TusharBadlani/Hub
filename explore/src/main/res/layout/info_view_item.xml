<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dimen_15"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="87.5dp"
        android:layout_height="87.5dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:elevation="@dimen/dimen_0"
        android:focusable="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:foreground="@drawable/round_border_for_discovery_cardview"
        app:cardCornerRadius="@dimen/dimen_15"
        app:cardElevation="@dimen/dimen_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cpBackground"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_3"
        android:layout_marginEnd="@dimen/dimen_40"
        android:text="Title1"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/cpTextDark"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/card1"
        app:layout_constraintTop_toTopOf="@+id/card1" />

    <TextView
        android:id="@+id/user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="Discription"
        android:textColor="@color/cpTextDark"
        android:textSize="@dimen/font_size_13"
        android:layout_marginEnd="@dimen/dimen_30"
        app:layout_constraintLeft_toRightOf="@id/card1"
        app:layout_constraintStart_toStartOf="@+id/title1"
        app:layout_constraintTop_toBottomOf="@id/title1" android:maxLines="1" />

    <TextView
        android:id="@+id/category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:hint="category-1"
        android:textColor="@color/cpHelpText"
        android:textSize="@dimen/font_size_13"
        android:text="@{'@' + category-1}"
        app:layout_constraintLeft_toRightOf="@id/card1"
        app:layout_constraintStart_toStartOf="@+id/user1"
        app:layout_constraintTop_toBottomOf="@id/user1" />
    <TextView
        android:id="@+id/category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:hint="category-1"
        android:textColor="@color/cpHelpText"
        android:textSize="@dimen/font_size_13"
        android:text="@{'@' + category-1}"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/category1"
        app:layout_constraintTop_toTopOf="@id/category1"
        app:layout_constraintBottom_toBottomOf="@id/category1"/>


</androidx.constraintlayout.widget.ConstraintLayout>
