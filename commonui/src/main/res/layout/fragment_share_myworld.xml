<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cessini.technology.commonui.fragment.ShareMyworldFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scheduleFragmentConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <ImageView
                android:id="@+id/room_notice_dropdown_icon"
                android:layout_width="@dimen/dimen_43"
                android:layout_height="@dimen/dimen_7"
                android:layout_marginTop="@dimen/dimen_7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tabicon" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="Share"
                android:textColor="@color/cpTextDark"
                android:textSize="@dimen/font_size_23"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_notice_dropdown_icon" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_30"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:srcCompat="@drawable/ic_user_defolt_avator" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textColor="@color/cpTextDark"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_10"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via Direct message"
                android:textColor="@color/cpHelpText"
                android:textSize="@dimen/font_size_14"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <LinearLayout
                android:id="@+id/cardView2"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dimen_0"
                android:paddingVertical="@dimen/dimen_10"
                android:background="@drawable/roundradiusforbutton"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" >


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/dimen_33"
                    android:layout_height="@dimen/dimen_33"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_copylink" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/cpTextDark"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:text="Link of user profile or hub link" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/cpBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myrecview"
                    app:reverseLayout="true"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>