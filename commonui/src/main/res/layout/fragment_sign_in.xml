<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sigin"
            type="cessini.technology.commonui.presentation.auth.SignInViewModel" />

        <variable
            name="scontext"
            type="cessini.technology.commonui.presentation.auth.SignInFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dialog"
        android:padding="@dimen/dimen_10">

        <ImageView
            android:id="@+id/room_notice_dropdown_icon"
            android:layout_width="@dimen/dimen_37"
            android:layout_height="@dimen/dimen_37"
            android:layout_marginTop="@dimen/dimen_7"
            android:layout_marginLeft="@dimen/dimen_7"
            android:padding="@dimen/dimen_7"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cross_cancel_black" />

        <TextView
            android:id="@+id/Signingheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_40"
            android:gravity="center"
            android:text="@string/login_I"
            android:textColor="@color/cpTextDark"
            android:textSize="@dimen/font_size_26"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sign_in_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:background="@drawable/card_view_border_black"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            >

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_google_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:text="@string/add_G"
                android:textAllCaps="false"
                android:textColor="@color/cpTextDark"
                android:textSize="@dimen/font_size_18"
                 />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0">


            <TextView
                android:id="@+id/terms_and_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:gravity="center"
                android:text="@string/terms_and_privacy_policies"
                android:textColor="@color/cpTextDark"
                android:textFontWeight="600"
                android:textSize="@dimen/font_size_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/video_l"
            android:layout_marginTop="@dimen/dimen_7"
            android:textColor="@color/cpHelpText"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_5"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_3"
            android:text="@string/myspace_L_T"
            android:textColor="@color/cpHelpText"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/dimen_47"
            android:layout_height="@dimen/dimen_47"
            android:padding="@dimen/dimen_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_golive" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dimen_47"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginTop="@dimen/dimen_40"
            android:padding="@dimen/dimen_2"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Signingheader"
            app:srcCompat="@drawable/ic_ilovecontent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dimen_47"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginHorizontal="@dimen/dimen_25"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_hubnew" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_5"
            android:text="@string/make_Y_V"
            android:textColor="@color/cpHelpText"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <ProgressBar
            android:id="@+id/btn_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/circle_shape_blue"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/cpPrimeBlue"
            android:translationZ="@dimen/dimen_10"
            android:visibility="gone"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/sign_in_button"
            app:layout_constraintEnd_toEndOf="@+id/sign_in_button"
            app:layout_constraintStart_toStartOf="@+id/sign_in_button"
            app:layout_constraintTop_toTopOf="@+id/sign_in_button"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/btn_progress_facebook"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/circle_shape_blue"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/cpPrimeBlue"
            android:translationZ="@dimen/dimen_10"
            android:visibility="gone"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/facebook_sign_in"
            app:layout_constraintEnd_toEndOf="@+id/facebook_sign_in"
            app:layout_constraintStart_toStartOf="@+id/facebook_sign_in"
            app:layout_constraintTop_toTopOf="@+id/facebook_sign_in"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maybe later"
            android:textAllCaps="false"
            android:textColor="@color/cpHelpText"
            android:textFontWeight="700"
            android:textSize="@dimen/font_size_18"
            android:layout_marginTop="@dimen/dimen_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook_sign_in" />
        <LinearLayout
            android:id="@+id/facebook_sign_in"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/card_view_border_black"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/sign_in_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button">

            <ImageView
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_facebook_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:text="@string/add_F"
                android:textAllCaps="false"
                android:textColor="@color/cpTextDark"
                android:textSize="@dimen/font_size_18" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>