<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dimen_5"
                android:background="@color/cpBottomSheetBackground">

                <ImageView
                    android:id="@+id/img_user_image"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_margin="@dimen/dimen_5"
                    android:foreground="@drawable/stroke_drawable"
                    android:src="@drawable/ic_user_defolt_avator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_username_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/user_N"
                    android:textColor="@color/cpTextDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_user_image"
                    app:layout_constraintTop_toTopOf="@+id/img_user_image" />

                <TextView
                    android:id="@+id/txt_comment_body"
                    android:layout_width="321dp"
                    android:layout_height="22dp"
                    android:text="@string/add_Comment"
                    android:textColor="@color/cpHelpText"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/txt_username_comment"
                    app:layout_constraintTop_toBottomOf="@id/txt_username_comment" />

            </androidx.constraintlayout.widget.ConstraintLayout>
</layout>